#!/usr/bin/env bash

count=0
disconnected=" якй"
connected=" яки"
ID="$(ip link | awk '/state UP/ {print $2}')"

while true; do
  if (ping -c 1 archlinux.org || ping -c 1 google.com || ping -c 1 bitbucket.org || ping -c 1 github.com) &>/dev/null; then
    echo "$connected" ; sleep 25
  else
    echo "$disconnected" ; sleep 0.5
  fi
done
